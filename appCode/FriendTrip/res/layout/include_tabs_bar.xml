<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@string/tab_bar_width"
    android:layout_height="@string/tab_bar_height"
    android:background="@color/freshblogsbg"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/home_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
       
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/icon_home" />

        <TextView
            android:id="@+id/txt_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="首页" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/surrounding_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" 
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_lock_power_off" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="周边" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trip_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_menu_mapmode" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="出行" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pCenter_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/touxing" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="我的" />

    </LinearLayout>
</LinearLayout>
