<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/banner_container_spot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey" >

        <include
            android:id="@+id/banner_jazzyview_spotDetail"

            layout="@layout/include_banner" />
        <TextView
            android:id="@+id/txt_name_spotDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:text="成都" />

        <TextView
            android:id="@+id/txt_describe_spotDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name_spotDetail"
            android:layout_marginLeft="10dp"
            android:alpha="0.6"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:text="成都市著名的旅游城市，你来了就不想走！" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:alpha="0.8"
        android:background="@color/grey" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/hots_comment" />

            <TextView
                android:id="@+id/txt_comNum_spotDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="235人评论" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/failure_nodata" />

            <TextView
                android:id="@+id/txt_goneNum_spotDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400人去过" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/collection_big" />

            <TextView
                android:id="@+id/txt_wantNum_spotDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="568人想去" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/promote_content_spot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" >

        <include
            android:id="@+id/spot_list_spot"
            layout="@layout/include_spot_list" />
    </FrameLayout>

</LinearLayout>
