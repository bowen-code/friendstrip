<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:text="发布出行"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="始发地："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edit_ori_Release"
                android:layout_width="180dp"
                android:layout_height="@dimen/edit_height"
                android:hint="学校/城市/景区"
                android:background="@drawable/round_edit_shap1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="目的地："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edit_dest_Release"
                android:layout_width="180dp"
                android:layout_height="@dimen/edit_height"
                android:hint="学校/城市/景区"
                android:background="@drawable/round_edit_shap1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text=" 类型 ："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RadioGroup
                android:id="@+id/rdioGroup_Type_Release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioBtn_trip_Release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="游玩" />

            <RadioButton
                android:id="@+id/radioBtn_sharecar_Release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="拼车" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="出发时间："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edit_goTime_Release"
                android:layout_width="180dp"
                android:layout_height="@dimen/edit_height"
                android:editable="false"
                android:clickable="true"                
                android:text=""
                android:background="@drawable/round_edit_shap1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text=" 人数 ："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edit_peopleNum_Release"
                android:layout_width="60dp"
                android:layout_height="@dimen/edit_height"
                android:text=""
                android:background="@drawable/round_edit_shap1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="联系方式："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edit_phone_Release"
                android:layout_width="180dp"
                android:layout_height="@dimen/edit_height"
                android:text=""
                android:background="@drawable/round_edit_shap1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="right" >

            <TextView
                android:id="@+id/textView13"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="附加信息："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/edit_etra_Release"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="您的出行附加说明，比如：对行程的安排，住宿，游玩的方式。。。"
                android:scrollHorizontally="true"
                
                android:background="@drawable/round_edit_shap1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
             >

            <Button
                android:id="@+id/btn_release_Release"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:background="@drawable/round_button_shap"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="80dp"
                android:text="发布" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
